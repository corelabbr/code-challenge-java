{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "plugins": ["react", "react-hooks", "prettier"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false,
          "trailingComma": "es5",
          "arrowParens": "always",
          "printWidth": 80
        }
      ],
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "no-unused-vars": "warn",
      "jsx-quotes": ["error", "prefer-double"],
      "react/jsx-uses-react": "off",
      "react/jsx-uses-vars": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  